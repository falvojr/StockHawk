<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/stock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/half_half_margin"
            android:layout_marginEnd="@dimen/half_half_margin"
            android:layout_marginLeft="@dimen/half_half_margin"
            android:layout_marginRight="@dimen/half_half_margin"
            android:layout_marginStart="@dimen/half_half_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:hint="@string/dialog_hint"
            android:inputType="textCapCharacters" />

    </LinearLayout>

</layout>